extends ../layout

block content
	h1 article:#{post.tittle}
	include ../nav
	if(user && (user.name == post.name))
		p.row.col-sm-offset-2
		span
			a(href="/edit/#{post.name}/#{post.time.day}/#{post.tittle}") 编辑
		span
			a(href="/remove/#{post.name}/#{post.time.day}/#{post.tittle}") 删除
	p.col-sm-10.col-sm-offset-1
		span 作者:
		a(href="/u/#{post.name}") #{post.name}
	p.col-sm-10.col-sm-offset-1
		span 日期:
		span #{post.time.minute}
	p.col-sm-10.col-sm-offset-1 !{post.article}